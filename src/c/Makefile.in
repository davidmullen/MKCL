	$(AR) cr $@ $(OBJS)
	$(RANLIB) $@

../mkclmintop.a: GNUmakefile main.o all_symbols_min.o $(PACKAGES_OBJS:%.o=%_min.o)
	$(RM) $@
	$(AR) cr $@ main.o all_symbols_min.o $(PACKAGES_OBJS:%.o=%_min.o)
	$(RANLIB) $@

