clean:
	$(RM) $(OBJS) $(OBJS:%.o=%.s) all_symbols_min.o all_symbols.o cinit.o core core.* a.out
	$(RM) $(PACKAGES_OBJS) $(PACKAGES_OBJS:%.o=%_min.o)
	$(RM) mkcl/gc/*.h $(C_EXPORTED_SYMBOLS_H_IN_MKCL) $(EXPOSE_SYMBOLS_H_IN_MKCL)
	$(RM) $(DPP)
	cd packages; $(MAKE) clean

distclean: clean
	$(RM) symbols_list2.h # all_symbols.c cinit.c
	$(RM) GNUmakefile makefile.depend
	$(RM) Makefile
	cd packages; $(MAKE) distclean

realclean: distclean
	$(RM) *~ arch/*~
	cd packages; $(MAKE) realclean


# Build rules

$(DPP): dpp.c symbols_list2.h
	$(TRUE_CC) -O2 dpp.c  -o $@

symbols_list2.h: symbols_list.h
	cpp -DDPP symbols_list.h | \
	sed -e 's%{\([A-Z ]*.*".*"\),[^,]*,[ ]*NULL,.*}%{\1,NULL,-1}%g' \
	    -e 's%{\([A-Z ]*.*".*"\),[^,]*,[ ]*\([^,]*\),[ ]*\([^,]*\),.*}%{\1,"\2",\3}%g' \
	    -e 's%{NULL.*%{NULL,NULL,-1}};%' > $@-$$$$; \
	mv $@-$$$$ $@ # We do this here to assure the "atomic" creation of symbols_list2.h.



